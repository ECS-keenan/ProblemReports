<%= form_tag '/modifyNote', :method => 'PUT', :remote => true do %>
	<label> Comment </label>
	<%= text_area_tag :note,@note.comment, :id =>"new-note-input" %>
	<label> Time Spent (Minutes) </label>
	<%= number_field_tag :time_spent, @note.time_spent, :id =>"new-note-time" %>
	<%= hidden_field_tag :id, @note.id %>
	<%= submit_tag("Save") %>
<% end %>